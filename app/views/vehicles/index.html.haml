.container
	%h1 All Vehicles

	// %h3 #{flash[:notice]}
	%h3 
	.table-responsive
		%table#vehicles.table
			%thead
				%tr
					%th Plate Number
					%th Is Available
			%tbody
				- @vehicles.each do |vehicle|
					%tr
						%td= vehicle.name
						%td= vehicle.isAvailable
						%td= link_to 'Update ' , edit_vehicle_path(vehicle), :class => "btn btn-outline-primary"
						//%td= button_to 'Delete ', vehicle_path(vehicle), :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-outline-danger"
						%td= link_to 'Delete ', vehicle_path(vehicle), :method => :delete, data: { confirm: "Damn you if you are not sure!" , title: 'Sure about that?', commit: 'YES', cancel: 'NO' }, :class => "btn btn-outline-danger"

	= link_to 'Add New Vehicle', new_vehicle_path, :class => "btn btn-outline-primary"
